{
	"manifest_version": 2,
	"name": "Opera Extensions",
	"description": "Sample extension for the “Making your first extension” article",
	"version": "1.0",
	"background": {
		"scripts": [
			"./background.js",
			"./modules/iframe.js",
			"./modules/image-search.js"
		]
	},
	"permissions": ["tabs", "contextMenus"],
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Go to Dev.Opera!"
	}
}